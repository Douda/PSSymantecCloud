{
    // PowerShell settings to comply with the repo standards
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.autoCorrectAliases": true,
    "powershell.codeFormatting.newLineAfterOpenBrace": true,
    "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationForFirstPipeline",
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.codeFormatting.useCorrectCasing": true,
    "powershell.codeFormatting.whitespaceBetweenParameters": false,
    "powershell.codeFormatting.addWhitespaceAroundPipe": true,
    "powershell.codeFormatting.trimWhitespaceAroundPipe": true,
    // Editor
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#1fc3a5",
        "activityBar.background": "#1fc3a5",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#ba23dc",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#1fc3a5",
        "statusBar.background": "#189780",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#1fc3a5",
        "statusBarItem.remoteBackground": "#189780",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#189780",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#18978099",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#189780",
    
}
